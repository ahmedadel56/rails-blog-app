<h2>Here is the Profile for a given user</h2>
  img: <%= @user.photo %><br>
  name: <%= @user.name %><br>
  posts <%= @user.posts_counter %><br>
  bio <%= @user.bio %><br>
<hr>
  <% if @user.id == current_user.id %>
  <%= link_to "new Post", new_user_post_path(@user.id) %>
  <% end %>
  
<% @posts.each do |post| %>
  <h2><a href= "<%=user_post_path(@user.id,post.id)%>"> <%= post.title %></a></h2>  <br/>

  content: <%= post.text %><br>
  comments <%= post.comment_counter %><br>
  likes <%= post.likes_counter %><br>
  
  <% if can? :manage, post %>
      <%=button_to 'Delete Post', user_post_path(@user.id,post.id), :method => :delete %>
  <% end %>
  
  <br/>
<% end %>
