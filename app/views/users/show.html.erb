<div class="d-grid gap-2 col-3 mx-auto">
  <p class="btn btn-outline-primary shadow" align="center"><%= link_to "Back to Users", '/users' %></p>
</div>
<div>
  <div class="d-flex">
    <div class="border col-2">
        <% if @user.image.attached? %>
          <img src="<%= url_for(@user.image) %>" width ="200px" height = "200px"  alt="">
        <% end %>
      </div>
    <div class="border col-9">
      <h2><%= @user.name %> </h2>
      <p align="right">Number of posts: <%= @user.posts_counter %></p>
    </div>
  </div>
  <div class="border col-11">
    <p>Bio</p>
    <p><%= @user.bio %></p>
  </div>
  <hr/>
  <h2>Recent Posts</h2>
  
  <% @posts.each do |post| %>
    <div class="border col-11">
      <p><a href= "<%=user_post_path(@user.id,post.id)%>"> <%= post.title %></a><%=  %></p>
      <p><%= post.text %></p>
      <p align="right">Comments: <%= post.comment_counter || 0 %>, Likes: <%= post.likes_counter || 0 %></p>
    </div>
  <% end %>
</div>
<div class="d-grid gap-2 col-3 mx-auto">
<% if @user.id == current_user.id %>
<p class="btn btn-outline-primary shadow" align="center">
  <%= link_to "new Post", new_user_post_path(@user.id) %>
</p>
<% end %>
</div>

  <%# <%= link_to "See User Posts", user_posts_path(@user.id) %>
<div class="d-grid gap-2 col-3 mx-auto">
  <p class="btn btn-outline-primary shadow" align="center"><%= link_to "See all posts", user_posts_path(user_id: params[:id]) %></p>
</div>


